<h1>Listing Roadworks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Tags</th>
      <th>Submitteddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roadworks.each do |roadwork| %>
      <tr>
        <td><%= roadwork.description %></td>
        <td><%= roadwork.startdate %></td>
        <td><%= roadwork.enddate %></td>
        <td><%= roadwork.latitude %></td>
        <td><%= roadwork.longitude %></td>
        <td><%= roadwork.tags %></td>
        <td><%= roadwork.submitteddate %></td>
        <td><%= link_to 'Show', roadwork %></td>
        <td><%= link_to 'Edit', edit_roadwork_path(roadwork) %></td>
        <td><%= link_to 'Destroy', roadwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

