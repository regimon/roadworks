<p id="notice"><%= notice %></p>

<h1>Current Roadworks in Aberdeen</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Tags</th>
      <th>Submitted On</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roadworks.each do |roadwork| %>
      <tr>
        <td><%= roadwork.description %></td>
        <td><%= roadwork.startdate %></td>
        <td><%= roadwork.enddate %></td>
        <td><%= roadwork.latitude %></td>
        <td><%= roadwork.longitude %></td>
        <td><%= roadwork.tags %></td>
        <td><%= roadwork.submitteddate %></td>
        <td><%= link_to 'Show', roadwork, class: 'btn btn-link'%></td>
			<% if current_user && current_user.admin?%>
        <td><%= link_to 'Edit', edit_roadwork_path(roadwork) , class:'btn btn-link'%></td>
        <td><%= link_to 'Destroy', roadwork, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger'%></td>
			<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

